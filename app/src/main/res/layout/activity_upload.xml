<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Laporan.UploadActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rv_foto"
            android:layout_alignRight="@id/rv_foto"
            android:layout_margin="-20dp"
            android:src="@drawable/ic_add_photo_laporan"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAPORAN"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:textSize="17sp"
        android:textColor="@color/mainColor"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/et_laporan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_info"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:padding="10dp"
        android:layout_weight="2"/>



</LinearLayout>