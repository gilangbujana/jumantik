<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/iv_foto_berita_item"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/layout_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_judul_berita_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/mainColor"
            android:text="DBD MEMAKAN KORBAN"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_waktu_berita_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="2 Jam yang lalu"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_bagikan_berita_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"/>


        </LinearLayout>








    </LinearLayout>



</androidx.cardview.widget.CardView>